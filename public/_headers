# Immutable caching for content-hashed card chunks
# Filename pattern: cards-000-a1b2c3d4e5f6g7h8.json
/data/cards-*-*.json
  Cache-Control: public, max-age=31536000, immutable

# Symbols rarely change
/symbols/*
  Cache-Control: public, max-age=604800

# Indexes/migrations change with each data update
/data/cards-indexes.json
  Cache-Control: public, max-age=3600

/data/cards-byteindex.bin
  Cache-Control: public, max-age=3600

/data/migrations.json
  Cache-Control: public, max-age=86400
