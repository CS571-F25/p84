# AT Protocol well-known files need CORS for cross-origin discovery
/.well-known/*
  Access-Control-Allow-Origin: *

# Fonts - static assets, rarely change (1 year)
/fonts/recursive/*
  Cache-Control: public, max-age=31536000, immutable
/fonts/fraunces/*
  Cache-Control: public, max-age=31536000, immutable

# Keyrune - updates with new MTG sets (48 hours)
/fonts/keyrune/*
  Cache-Control: public, max-age=172800

# Immutable caching for content-hashed card chunks (1 year)
# Filename pattern: cards-000-a1b2c3d4e5f6g7h8.json
/data/cards/*
  Cache-Control: public, max-age=31536000, immutable

# Symbols rarely change (1 week)
/symbols/*
  Cache-Control: public, max-age=604800

# Volatile data - changes with each data update
/data/cards-byteindex.bin
  Cache-Control: public, max-age=3600

/data/migrations.json
  Cache-Control: public, max-age=86400

/data/version.json
  Cache-Control: public, max-age=3600
