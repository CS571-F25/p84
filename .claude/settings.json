{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run check -- --write \"$CLAUDE_TOOL_INPUT_FILE_PATH\" 1>&2 || exit 2"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-typecheck.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/stop-test.sh"
          }
        ]
      }
    ]
  }
}
