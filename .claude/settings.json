{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run check -- --write \"$CLAUDE_TOOL_INPUT_FILE_PATH\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npm run typecheck:faster 1>&2 || exit 2"
          },
          {
            "type": "command",
            "command": "npm run test -- --changed 1>&2 || exit 2"
          }
        ]
      }
    ]
  }
}
