{
  "name": "deckbelcher",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "SSL_CERT_FILE=\"$NIX_SSL_CERT_FILE\" vite dev --port 3000",
    "build": "vite build",
    "prebuild": "npm run download:scryfall",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "test": "vitest run --silent='passed-only'",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "typecheck": "tsc --noEmit",
    "build:typelex": "typelex compile com.deckbelcher.*",
    "build:lexicons": "lex-cli generate -c ./lex.config.js",
    "download:scryfall": "node --experimental-strip-types scripts/download-scryfall.ts",
    "load:d1:local": "bash scripts/load-d1-local.sh",
    "load:d1:remote": "bash scripts/load-d1-remote.sh"
  },
  "dependencies": {
    "@atcute/bluesky": "^3.2.8",
    "@atcute/client": "^4.0.5",
    "@atcute/identity-resolver": "^1.1.4",
    "@atcute/oauth-browser-client": "^2.0.1",
    "@cloudflare/vite-plugin": "^1.13.19",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.9",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "comlink": "^4.4.2",
    "lucide-react": "^0.544.0",
    "minisearch": "^7.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@atcute/lex-cli": "^2.3.1",
    "@biomejs/biome": "2.2.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@typelex/cli": "^0.4.0",
    "@typelex/emitter": "^0.4.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/web-worker": "^3.2.4",
    "fast-check": "^4.4.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.46.0"
  }
}
